<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/abt"
    tools:context="pi.rs.handrifirdaus.rsdepok.AboutActivity">

    <TextView
        android:id="@+id/tvjudulAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:text="Aplikasi Pencarian Rumah Sakit di Kota Depok"/>
    <TextView
        android:id="@+id/tvdevlAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvjudulAbout"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Aplikasi dibuat untuk memberikan lokasi dan informasi tentang rumah sakit yang ada di Kota Depok"/>
    <TextView
        android:id="@+id/tvDevTentang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="360dip"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Di Kembangkan Oleh:\nHandri Firdaus\n3IA05\n\nfirdaushandri88@gmail.com\n2017" />


</RelativeLayout>